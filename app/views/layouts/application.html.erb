<html>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	
		<title>DineRec.com - Dining Recommendations from the Pros</title>
		<meta name="description" content="Twin Cities restaurant reviews from professional food critics.">
		<meta name="author" content="Designed and developed by Matt Martin.">
	
		<meta name="viewport" content="width=device-width,initial-scale=1">
	
		<link rel="stylesheet" href="css/style.css">
	
	  <%= stylesheet_link_tag    "application" %>
	  <%= javascript_include_tag "application" %>	  
	  <%= csrf_meta_tags %>
	  
	</head>
	<body>
		<div id="header-container">
			<header class="wrapper clearfix">
				<h1 id="title">DineRec</h1>
				<nav>
					<ul>
						<li><a href="#">New Recs</a></li>
						<li><a href="#">Top Recs</a></li>
						<li><a href="#">To-Do Recs</a></li>
					</ul>
				</nav>
			</header>
		</div>
		<div id="main-container">
			<div id="main" class="wrapper clearfix">
				<%= yield %>
			</div>
		</div>
		<div id="footer-container">
			<footer class="wrapper">
				<h3>footer</h3>
				<!-- # Show Admin Links # -->
				<% if session[:user_id] %>
					<ul>
						<li><%= link_to 'Restaurants', restaurants_path %></li>
						<li><%= link_to 'Reviews', reviews_path %></li>
						<li><%= link_to 'Users', users_path %></li>
					</ul>
					<%= button_to 'Logout', logout_path, method: :delete %>
				<% end %>
			</footer>
		</div>
	
	</body>
</html>
